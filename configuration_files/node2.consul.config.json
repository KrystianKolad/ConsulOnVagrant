{
    "services" :[
        {
            "id":"redis",
            "name":"redis",
            "port":6379,
            "checks":[
                {
                    "args":["redis-cli","ping"],
                    "interval":"15s"
                }
            ]
        },
        {
            "id":"mail",
            "name":"mail",
            "port":8025,
            "checks":[
                {
                    "http":"http://localhost:8025",
                    "interval":"15s"
                }
            ]
        },
        {
            "id":"www",
            "name":"www",
            "port":80,
            "checks":[
                {
                    "http":"http://localhost:80",
                    "interval":"15s"
                }
            ]
        }
    ]
}